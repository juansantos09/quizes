<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color:rgba(51, 4, 66, 1);
            color: white;
            text-align: center;
            margin: 0;
            padding: 0;
        }

        .quiz-container {
            width: 80%;
            margin: auto;
            background-color: #5a2d88;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            margin-top: 10%;
        }

        .question {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .options {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .option-button {
            padding: 15px 30px;
            font-size: 18px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .option-button:hover {
            background-color: #f9c74f;
        }

        .blue { background-color: #3b82f6; }
        .red { background-color: #ef4444; }
        .green { background-color: #10b981; }
        .yellow { background-color: #f59e0b; }

        .result {
            margin-top: 30px;
            font-size: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="quiz-container">
        <div id="question-container">
            <div class="question" id="question">Carregando pergunta...</div>
            <div class="options">
                <button class="option-button blue" onclick="checkAnswer('A')">A) Carregando...</button>
                <button class="option-button red" onclick="checkAnswer('B')">B) Carregando...</button>
                <button class="option-button green" onclick="checkAnswer('C')">C) Carregando...</button>
                <button class="option-button yellow" onclick="checkAnswer('D')">D) Carregando...</button>
            </div>
        </div>

        <div id="result" class="result"></div>
        <div id="next-button" style="display: none;">
            <button onclick="nextQuestion()" style="padding: 10px 20px; font-size: 18px; cursor: pointer; border-radius: 5px; background-color: #3b82f6; color: white;">Próxima Pergunta</button>
        </div>
    </div>

    <script>
        // Perguntas e Respostas
        const quizData = [
    {
        question: "Qual das alternativas representa corretamente um ataque de *Man-in-the-Middle* (MITM)?",
        options: {
            A: "Invasão ao roteador via força bruta",
            B: "Interceptação da comunicação entre duas partes para roubar dados",
            C: "Envio de vírus escondido em um anexo de e-mail",
            D: "Uso de engenharia social para enganar a vítima"
        },
        correct: "B"
    },
    {
        question: "De acordo com o Marco Civil da Internet (Lei nº 12.965/2014), qual é o princípio fundamental da lei?",
        options: {
            A: "Incentivar a comercialização de dados",
            B: "Favorecer o monitoramento do usuário pelo governo",
            C: "Garantir a neutralidade da rede, a privacidade e a liberdade de expressão",
            D: "Reduzir o acesso da população à internet"
        },
        correct: "C"
    },
    {
        question: "O que diferencia um *spyware* de um *trojan*?",
        options: {
            A: "O spyware se autorreplica como um vírus, o trojan não",
            B: "O trojan coleta dados silenciosamente; o spyware, não",
            C: "O spyware monitora a atividade do usuário; o trojan se disfarça como software legítimo",
            D: "Não há diferença, ambos são sinônimos"
        },
        correct: "C"
    }
];

        let currentQuestionIndex = 0;
        let userScore = 0;

        // Função para carregar a próxima pergunta
        function loadQuestion() {
            const currentQuestion = quizData[currentQuestionIndex];
            document.getElementById('question').innerText = currentQuestion.question;

            const options = currentQuestion.options;
            document.querySelector('.blue').innerText = `A) ${options.A}`;
            document.querySelector('.red').innerText = `B) ${options.B}`;
            document.querySelector('.green').innerText = `C) ${options.C}`;
            document.querySelector('.yellow').innerText = `D) ${options.D}`;
        }

        // Função para verificar a resposta do usuário
        function checkAnswer(selectedOption) {
            const currentQuestion = quizData[currentQuestionIndex];
            const correctAnswer = currentQuestion.correct;

            const result = document.getElementById('result');
            if (selectedOption === correctAnswer) {
                result.innerHTML = "Resposta correta!";
                userScore++;
            } else {
                result.innerHTML = "Resposta errada!";
            }

            document.getElementById('next-button').style.display = 'block';
        }

        // Função para carregar a próxima pergunta
        function nextQuestion() {
            currentQuestionIndex++;

            if (currentQuestionIndex < quizData.length) {
                loadQuestion();
                document.getElementById('result').innerHTML = '';
                document.getElementById('next-button').style.display = 'none';
            } else {
                document.getElementById('result').innerHTML = `Fim do quiz! Você acertou ${userScore} de ${quizData.length} perguntas.`;
                document.getElementById('next-button').style.display = 'none';
            }
        }

        // Iniciar o quiz
        loadQuestion();
    </script>

</body>
</html>
