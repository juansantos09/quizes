<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color:rgba(51, 4, 66, 1);
            color: white;
            text-align: center;
            margin: 0;
            padding: 0;
        }

        .quiz-container {
            width: 80%;
            margin: auto;
            background-color: #5a2d88;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            margin-top: 10%;
        }

        .question {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .options {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .option-button {
            padding: 15px 30px;
            font-size: 18px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .option-button:hover {
            background-color: #f9c74f;
        }

        .blue { background-color: #3b82f6; }
        .red { background-color: #ef4444; }
        .green { background-color: #10b981; }
        .yellow { background-color: #f59e0b; }

        .result {
            margin-top: 30px;
            font-size: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="quiz-container">
        <div id="question-container">
            <div class="question" id="question">Carregando pergunta...</div>
            <div class="options">
                <button class="option-button blue" onclick="checkAnswer('A')">A) Carregando...</button>
                <button class="option-button red" onclick="checkAnswer('B')">B) Carregando...</button>
                <button class="option-button green" onclick="checkAnswer('C')">C) Carregando...</button>
                <button class="option-button yellow" onclick="checkAnswer('D')">D) Carregando...</button>
            </div>
        </div>

        <div id="result" class="result"></div>
        <div id="next-button" style="display: none;">
            <button onclick="nextQuestion()" style="padding: 10px 20px; font-size: 18px; cursor: pointer; border-radius: 5px; background-color: #3b82f6; color: white;">Próxima Pergunta</button>
        </div>
    </div>

    <script>
        // Perguntas e Respostas
        const quizData = [
            {
                question: "O que é um phishing?",
                options: {
                    A: "Um tipo de vírus",
                    B: "Um ataque de roubo de dados através de e-mails falsos",
                    C: "Um ataque de negação de serviço",
                    D: "Um tipo de criptomoeda"
                },
                correct: "B"
            },
            {
                question: "Qual é o objetivo de um ransomware?",
                options: {
                    A: "Roubar informações bancárias",
                    B: "Criar páginas falsas",
                    C: "Bloquear o acesso aos dados e exigir pagamento para liberá-los",
                    D: "Infectar computadores com vírus"
                },
                correct: "C"
            },
            {
                question: "O que é a Lei Carolina Dieckmann?",
                options: {
                    A: "Lei que proíbe o uso de celulares em escolas",
                    B: "Lei que trata do crime de invasão de dispositivos eletrônicos",
                    C: "Lei que regula a criação de sites de compras online",
                    D: "Lei que pune crimes de assédio sexual"
                },
                correct: "B"
            }
        ];

        let currentQuestionIndex = 0;
        let userScore = 0;

        // Função para carregar a próxima pergunta
        function loadQuestion() {
            const currentQuestion = quizData[currentQuestionIndex];
            document.getElementById('question').innerText = currentQuestion.question;

            const options = currentQuestion.options;
            document.querySelector('.blue').innerText = `A) ${options.A}`;
            document.querySelector('.red').innerText = `B) ${options.B}`;
            document.querySelector('.green').innerText = `C) ${options.C}`;
            document.querySelector('.yellow').innerText = `D) ${options.D}`;
        }

        // Função para verificar a resposta do usuário
        function checkAnswer(selectedOption) {
            const currentQuestion = quizData[currentQuestionIndex];
            const correctAnswer = currentQuestion.correct;

            const result = document.getElementById('result');
            if (selectedOption === correctAnswer) {
                result.innerHTML = "Resposta correta!";
                userScore++;
            } else {
                result.innerHTML = "Resposta errada!";
            }

            document.getElementById('next-button').style.display = 'block';
        }

        // Função para carregar a próxima pergunta
        function nextQuestion() {
            currentQuestionIndex++;

            if (currentQuestionIndex < quizData.length) {
                loadQuestion();
                document.getElementById('result').innerHTML = '';
                document.getElementById('next-button').style.display = 'none';
            } else {
                document.getElementById('result').innerHTML = `Fim do quiz! Você acertou ${userScore} de ${quizData.length} perguntas.`;
                document.getElementById('next-button').style.display = 'none';
            }
        }

        // Iniciar o quiz
        loadQuestion();
    </script>

</body>
</html>
